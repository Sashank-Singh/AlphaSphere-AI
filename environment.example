# AlphaSphere-AI Environment Configuration
# Copy this file to .env.local and fill in your actual values

# === ALPACA CONFIGURATION ===
# Get your keys from https://alpaca.markets/
ALPACA_API_KEY_ID=your_alpaca_key_id_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_PAPER_TRADING=true

# Frontend only needs the public key ID
VITE_ALPACA_API_KEY=your_alpaca_key_id_here

# === YAHOO FINANCE CONFIGURATION ===
YAHOO_FINANCE_RATE_LIMIT=100  # requests per minute
YAHOO_FINANCE_CACHE_TTL=30    # seconds

# === BACKEND CONFIGURATION ===
BACKEND_PORT=5001
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# === DEVELOPMENT CONFIGURATION ===
NODE_ENV=development
VITE_API_BASE_URL=http://localhost:5001

# === GROQ AI CONFIGURATION ===
# Get your API key from https://console.groq.com/
VITE_GROQ_API_KEY=your_groq_api_key_here

# === OPTIONAL SERVICES ===
# These are not required for basic Yahoo Finance + Alpaca setup
# VITE_RL_API_ENDPOINT=http://localhost:8501
# VITE_LLM_API_ENDPOINT=http://localhost:5001
